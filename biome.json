{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",

  "files": {
    "ignore": ["dist", "node_modules", ".changeset"]
  },
  "linter": {
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
